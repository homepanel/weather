<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<config>
	<service>
		<logbackXmlPath>etc/logback.xml</logbackXmlPath>
		<i18nPath>i18n</i18nPath>
	</service>
    <mqtt>
		<brokers>
			<broker>
				<host>1.example.com</host>
				<port>1883</port>
				<username>test</username>		
				<password>test</password>		
				<qosPublish>AT_MOST_ONCE</qosPublish>
				<qosSubscribe>AT_MOST_ONCE</qosSubscribe>
				<retain>false</retain>
			</broker>
			<broker>
				<host>2.example.com</host>
				<port>1883</port>
				<username>test</username>		
				<password>test</password>		
				<qosPublish>AT_MOST_ONCE</qosPublish>
				<qosSubscribe>AT_MOST_ONCE</qosSubscribe>
				<retain>false</retain>
			</broker>
		</brokers>
		<reconnectTimeoutValue>5</reconnectTimeoutValue>
		<reconnectTimeoutUnit>SECONDS</reconnectTimeoutUnit>	
    </mqtt>
	<weather>
		<locations>
			<openWeatherMap>
				<name>home</name>
				<title>Titel</title>
				<latitude>50.78023</latitude>
				<longitude>50.6276835</longitude>
				<language>de</language>
				<unit>METRIC</unit>
				<apiKey>test</apiKey>
			</openWeatherMap>
		</locations>
	</weather>
	<topics>
		<topic location="home" group="CURRENT" refreshIntervalValue="1" refreshIntervalUnit="HOURS">weather/home/current</topic>
		<topic location="home" group="FORECAST" refreshIntervalValue="2" refreshIntervalUnit="HOURS">weather/home/forecast</topic>
	</topics>
</config>